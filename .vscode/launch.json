{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Server: Debug (Dev)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/tsx/dist/cli.js",
      "args": ["watch", "src/index.ts"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/server/.env",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "skipFiles": ["<node_internals>/**"],
      "outputCapture": "std",
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/server/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "🏗️ Server: Debug (Built)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/dist/index.js",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "production"
      },
      "envFile": "${workspaceFolder}/server/.env",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "build-server"
    },
    {
      "name": "🌐 Client: Debug (Vite)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/client/node_modules/vite/bin/vite.js",
      "args": ["--mode", "development"],
      "cwd": "${workspaceFolder}/client",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🧪 Server: Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--detectOpenHandles"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "🐛 Server: Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "/app",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "🚀 Full Stack: Dev Mode",
      "configurations": [
        "🚀 Server: Debug (Dev)",
        "🌐 Client: Debug (Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    }
  ]
}